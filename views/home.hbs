<!DOCTYPE html>
<html>
  {{> head}}
  <body>

    <h1>Are You Done Yet?</h1>

    <p>
      {{board.name}}
    </p>

    <hr>

    {{#each cards}}
      <div>

        <div {{#if done}} style="color: grey"{{/if}}><a href={{url}}>{{name}}</a></div>

        {{#unless done}}
        {{#if activityUrl}}
        <div><a href={{activityUrl}}>{{activityUrl}}</a></div>
        {{/if}}
        {{/unless}}

        {{#each description}}
        <div>{{this}}</div>
        {{/each}}

        {{#unless done}}
        <div><a href="/cardDone/{{id}}">Done!</a></div>
        {{/unless}}

      </div>

      <hr>
    {{/each}}

  </body>
</html>
